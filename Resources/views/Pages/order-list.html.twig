{% extends '@StoreTemplate/Layout/_layout.html.twig' %}

{% block content_title %}Orders{% endblock content_title %}

{% block content %}

    <div class="row">
        <div class="span12">
            {% if orders|length > 0 %}
            <table class="basket-table">
                <thead>
                <tr>
                    <th></th>
                    <th>Order ID</th>
                    <th>Order State</th>
                    <th>Creation date</th>
                    <th>Amount</th>
                </tr>
                </thead>
                <tbody>
                {% for order in orders %}

                    <tr>
                        <td class="image">
                            <img src="{{ order.orderLines.first.product.principalImage|resize({
                                width: 80,
                                height: 80,
                                type: 5 })
                            }}" alt="{{ line.product.name }}" />
                        </td>
                        <td class="title">
                            <a href="{{ url('store_order_view', {
                                id: order.id
                            }) }}">Order #{{ order.id }}</a>
                        </td>
                        <td class="title">{{ order.lastOrderHistory.state }}</td>
                        <td class="title">{{ order.createdAt|date('d.m.Y') }}</td>
                        <td class="total">{{ order.amount|print_convert_money() }}</td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>
            {% else %}
                There are no orders
            {% endif %}
        </div>
    </div>

{% endblock %}
