<ul class="user-nav">
    {% if customer.id %}
        <li>
            <a href="{{ url("store_user") }}">
                {{ "Hello"|trans }} {{ customer.firstname }}
            </a>
        </li>
        <li>
            <a href="{{ url("store_logout") }}">Logout</a>
        </li>
    {% else %}
        <li>
            <a href="{{ url("store_login") }}">Login</a>
        </li>
        <li>
            <a href="{{ url("store_register") }}">Registration</a>
        </li>
        <li>
            <a href="{{ url("store_password_remember") }}">
                {{ 'Lost your password?'|trans }}
            </a>
        </li>
    {% endif %}
</ul>