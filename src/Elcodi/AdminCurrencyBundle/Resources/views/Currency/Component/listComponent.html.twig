{% extends 'AdminCoreBundle::Common/listComponent.html.twig' %}


{% block title %}
    {{ 'Currency list'|trans }}
{% endblock title %}


{% block table_head %}
    {% include "@AdminCore/Tables/head.html.twig" with {
        rows: {
            "id": {width:"25"},
            "iso": {},
            "symbol": {},
            "enabled": {width:"25"},
        },
        class: "currency",
    } %}
{% endblock table_head %}


{% block table_body_row %}
    <td>
        <a href="{{ url("admin_currency_view", {"id": entity.id}) }}">
            {{ entity.id }}
        </a>
    </td>
    <td>
        {{ entity.iso }}
    </td>
    <td>
        {{ entity.symbol }}
    </td>
    <td>
        {% if entity.enabled %}
            <span class="label label-success">true</span>
        {% else %}
            <span class="label label-danger">false</span>
        {% endif %}
    </td>

    {% include "@AdminCore/Tables/actions.html.twig" with {
        entity: entity,
        delete: false,
        class: "currency",
    } %}
{% endblock table_body_row %}


{% block table_paginator_links %}
    {% set url = 'admin_currency_list' %}
    {{ parent() }}
{% endblock table_paginator_links %}


{% block table_buttons %}
    <a href="{{ url("admin_currency_new") }}"type="button" class="btn btn-success">{{ "New Currency"|trans }}</a>
{% endblock table_buttons %}
