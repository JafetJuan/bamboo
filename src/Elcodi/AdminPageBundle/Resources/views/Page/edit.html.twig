{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block content_title %}
    {{ 'Page Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}
    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            "Page": {
                "url": url('admin_page_list')
            },
            ("Edit #" ~ id): {
                "active" : true
            }
        }
    } %}
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            {{ render(url("admin_page_edit_component", {
                'id': id
            })) }}
        </div>
    </div>

{% endblock content %}
