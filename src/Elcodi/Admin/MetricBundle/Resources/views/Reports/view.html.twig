{% extends 'AdminCoreBundle::layout.html.twig' %}


{% block content_title %}
    {{ 'Reports'|trans }}
{% endblock content_title %}

{% block breadcrumb %}
    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            ("Reports"): {
                "active" : true
            }
        }
    } %}
{% endblock %}


{% block content %}
    <div class="grid filter-reports">
        <div class="col-1-3">
            <ul class="filters">
                <li class="active"><a href="#">Unique visitors</a></li>
                <li><a href="#">Page views</a></li>
            </ul>
        </div>
        <div class="col-2-3">
            Filter by product:
            <input name="tags_select"  data-tc-modules="tags" data-tc-values="foo,baz,bar" data-tc-mode="restrict" placeholder="add tags separated by comma" required="required" />
        </div>
    </div>
    <div class="grid">
        <div class="col-1-1">
            <div class="box-background pb-n">
                <h2>{{ 'Visits last month'|trans }}</h2>
                <div class="box-none pa-n">
                    <canvas height="150" data-tc-modules="charts" data-tc-type="line" data-tc-labels-x="[January,February,March,June,July]">
                        <!-- The value could be an array... -->
                        <input name="results last year" type="hidden" value="[60,90,30,70,40]" />
                        <!-- ... or a string separated by comma -->
                        <input name="results this year" type="hidden" value="80,50,60,40,80" />
                    </canvas>
                </div>
            </div>
        </div>
    </div>
<div class="grid ta-c">
    <div class="col-1-2">
        <div class="box-background ph-n pb-n">
            <div class="box-none pa-n">
                <h2>{{ 'Last month conversion'|trans }}</h2>
                <canvas height="100" data-tc-modules="charts" data-tc-type="doughnut" data-tc-colors="[b55151,5b90bf,b48ead,96c47f,82b2af]">
                    <input name="Cart view" type="hidden" value="315" />
                    <input name="Billing/shipping" type="hidden" value="150" />
                    <input name="Payment" type="hidden" value="70" />
                    <input name="Checkout" type="hidden" value="45" />
                </canvas>
            </div>
        </div>
    </div>
    <div class="col-1-2">
        <div class="box-background ph-n pb-n ml-l">
            <div class="box-none pa-n">
                <h2>{{ "User's device"|trans }}</h2>
                <canvas height="100" data-tc-modules="charts" data-tc-type="pie">
                    <input name="Mobile" type="hidden" value="315" />
                    <input name="Desktop" type="hidden" value="250" />
                    <input name="Unknown" type="hidden" value="30" />
                </canvas>
            </div>
        </div>
    </div>
</div>
{% endblock content %}
