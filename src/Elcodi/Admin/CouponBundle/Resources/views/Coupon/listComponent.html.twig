{% extends 'AdminCoreBundle::Common/listComponent.html.twig' %}


{% block title %}
    {{ 'Coupon list'|trans }}
{% endblock title %}


{% block table_head %}
    {% include "@AdminCore/Tables/head.html.twig" with {
        rows: {
            "id": {width:"25"},
            "code": {},
            "name": {},
            "rule": {},
            "Enabled": {width:"25"},
        },
        class: "coupon",
    } %}
{% endblock table_head %}


{% block table_body_row %}
    <td>
        <a href="{{ url("admin_coupon_edit", {"id": entity.id}) }}">
            {{ entity.id }}
        </a>
    </td>
    <td>
        {{ entity.code }}
    </td>
    <td>
        {{ entity.name }}
    </td>
    <td>
        {% if entity.rule %}
            <span class="label label-info">{{ entity.rule.name }}</span>
        {% else %}
            <span class="label label-default">no rule</span>
        {% endif %}
    </td>
    <td>
        {% if entity.enabled %}
            <span class="label label-success">true</span>
        {% else %}
            <span class="label label-danger">false</span>
        {% endif %}
    </td>

    {% include "@AdminCore/Tables/actions.html.twig" with {
        entity: entity,
        class: "coupon",
    } %}
{% endblock table_body_row %}


{% block table_paginator_links %}
    {% set url = 'admin_coupon_list' %}
    {{ parent() }}
{% endblock table_paginator_links %}
