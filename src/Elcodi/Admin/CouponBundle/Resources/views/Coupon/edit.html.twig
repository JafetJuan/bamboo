{% extends 'AdminCoreBundle::layout.html.twig' %}


{% block content_title %}
    {{ 'Coupon Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}

    {% set entityHeader = coupon.id
        ? 'Edit ' ~ coupon.code
        : 'Create new Coupon'
    %}

    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            "Coupons": {
                "url": url('admin_coupon_list')
            },
            (entityHeader): {
                "active" : true
            }
        }
    } %}
{% endblock %}

{% block content %}

    {% if coupon.id %}
        {{ render(url("admin_coupon_edit_component", {
            'id': coupon.id
        })) }}
    {% else %}
        {{ render(url("admin_coupon_new_component")) }}
    {% endif %}

{% endblock content %}
