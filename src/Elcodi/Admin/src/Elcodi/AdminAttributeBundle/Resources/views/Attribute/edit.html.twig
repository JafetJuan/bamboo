{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block content_title %}
    {{ 'Attribute Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}

    {% set entityHeader = attribute.id
        ? 'Edit ' ~ attribute.name
        : 'Create new Attribute'
    %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: {
            'Attributes': {
                'url': url('admin_attribute_list')
            },
            (entityHeader): {
                'active' : true
            }
        }
    } %}

{% endblock breadcrumb %}

{% block content %}

    {% if attribute.id %}
        {{ render(url("admin_attribute_edit_component", {
            'id': attribute.id
        })) }}
    {% else %}
        {{ render(url("admin_attribute_new_component")) }}
    {% endif %}

{% endblock content %}
