{% extends 'AdminCoreBundle::Common/listComponent.html.twig' %}


{% block no_items %}
    <p class="msg-info">{{ 'There are no orders.'|trans }}</p>
{% endblock no_items %}


{% block title %}
    {{ 'Order list'|trans }}
{% endblock title %}


{% block table_head %}
    {% include "@AdminCore/Tables/head.html.twig" with {
        rows: {
            "Order": {sorting_disabled: true},
            "Date": {sorting_disabled: true},
            "Customer": {sorting_disabled: true},
            "Status": {sorting_disabled: true},
            "Total": {sorting_disabled: true},
        },
        class: "order",
    } %}
{% endblock table_head %}


{% block table_body_row %}
    <td>
        <a href="{{ url("admin_order_edit",{"id": entity.id}) }}">#{{ entity.id  + 1000 }}</a>
    </td>

    <td>
        {% if entity.createdAt|date("dmy") == "now"|date("dmy") %}
            {{ 'Today at'|trans }} {{ entity.createdAt|date("G:ia") }}
        {% elseif entity.createdAt|date("dmy")|number_format == "now"|date("dmy") -1 %}
            {{ 'Yesterday at'|trans }} {{ entity.createdAt|date("G:ia") }}
        {% elseif entity.createdAt|date("d")|number_format  > "now"|date("dmy") - 5 and  entity.createdAt|date("my")|number_format == "now"|date("my")%}
            {{ entity.createdAt|date("l d \\a\\t G:ia") }}
        {% else %}
            {{ entity.createdAt|date("M d \\a\\t G:ia") }}
        {% endif %}
    </td>
    <td>
        <a href="{{ url("admin_customer_edit", {"id": entity.customer.id}) }}">
            {{ entity.customer }}
        </a>
    </td>
    <td>
        <span class="label label-warning">{{ "Pending"|trans }}</span>
    </td>
    <td>
        {{ entity.amount|print_money }}
    </td>
{% endblock table_body_row %}


{% block table_paginator_links %}
    {% set url = 'admin_order_list' %}
    {{ parent() }}
{% endblock table_paginator_links %}
