{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block content_title %}
    {{ 'Variant Product Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: {
            'Products': {
                'url': url('admin_product_list')
            },
            ('#' ~ id): {
                'url': url('admin_product_edit', {id: id})
            },
            ('Edit Variant #' ~ variantId): {
                'active': true
            }
        }
    } %}

{% endblock breadcrumb %}

{% block content %}

    {{ render(url('admin_variant_edit_component', {
        'id': id,
        'variantId': variantId
    })) }}

{% endblock content %}
