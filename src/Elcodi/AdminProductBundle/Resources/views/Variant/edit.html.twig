{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block content_title %}
    {{ 'Variant Product Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: {
            'Products': {
                'url': url('admin_product_list')
            },
            ('#' ~ id): {
                'url': url('admin_product_view', {id: id})
            },
            ('Edit Variant #' ~ variantId): {
                'active': true
            }
        }
    } %}

{% endblock breadcrumb %}

{% block content %}

    <div class="row">
        <div class="col-md-8">
            {{ render(url('admin_variant_edit_component', {
                'id': id,
                'variantId': variantId
            })) }}
        </div>
        <div class="col-md-4">
            {{ render(url('admin_product_gallery_component', {
                'id': id,
            })) }}
        </div>
    </div>

{% endblock content %}
