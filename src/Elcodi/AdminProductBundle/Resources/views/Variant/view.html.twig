{% extends '@AdminProduct/Product/view.html.twig' %}

{% block content_title %}
    {{ 'Product Variant Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}

    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            'Products': {
                'url': url('admin_product_list')
            },
            ('#' ~ id): {
                'url': url('admin_product_view', {id: id})
            },
            ('Variant #' ~ variantId): {
                'active': true
            }
        }
    } %}

{% endblock breadcrumb %}

{% block content %}

    {{ render(url("admin_variant_view_component", {
        'id': id,
        'variantId': variantId
    })) }}

    {{ render(url("admin_product_gallery_component", {
        'id': variantId
    })) }}

{% endblock content %}
