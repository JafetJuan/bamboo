{% extends 'AdminCoreBundle::Common/formComponent.html.twig' %}

{% form_theme form 'AdminCoreBundle::Forms/fields.html.twig' %}

{% block content %}

    {{ form_start(form, {'action': url('admin_variant_update', {
        'id': entity.product.id,
        'variantId': entity.id
    })}) }}
    <fieldset>
        <div class="grid">
            <div class="col-1-3">
                <div class="box-none">
                    <h3 class="fw-n">{% trans %}Attributes{% endtrans %}</h3>
                    <p>{% trans %}What are the principle attributes that make unique this variant?{% endtrans %}</p>
                </div>
            </div>
            <div class="col-2-3">
                <div class="box">
                    <ol>
                        <li>
                            {{ form_row(form.options) }}
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="grid">
            <div class="col-1-3">
                <div class="box-none">
                    <h3 class="fw-n">{% trans %}Pricing{% endtrans %}</h3>
                    <p>{% trans %}Set the price and the offer if is needed.{% endtrans %}</p>
                </div>
            </div>
            <div class="col-2-3">
                <div class="box pb-n">
                    <ol class="grid">
                        <li class="col-1-2">
                            {{ form_row(form.price) }}
                            {{ form_row(form.stock) }}
                        </li>
                        <li class="col-1-2">
                            {{ form_row(form.reducedPrice) }}
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="grid">
            <div class="col-1-3">
                <div class="box-none mb-n pb-m">
                    <h3 class="fw-n">{% trans %}Visibility{% endtrans %}</h3>
                    <p>{% trans %}Control where and when this product could be seen.{% endtrans %}</p>
                </div>
            </div>
            <div class="col-2-3">
                <div class="box mb-n pb-n">
                    <ol>
                        <li>
                            {{ form_row(form.enabled, {'attr': {'type':'checkbox','label_help':'Uncheck to hide the product'}}) }}
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </fieldset>
    {{ form_row(form.stock) }}
    {{ form_row(form.createdAt, {'attr': {'class':'d-n'}}) }}
    {{ form_row(form.updatedAt, {'attr': {'class':'d-n'}}) }}
    <div class="grid">
        <div class="col-1-3">
            &nbsp;
        </div>
        <div class="col-2-3">
            <button type="submit" class="button-main">{{ 'Update'|trans }}</button>
            <a href="{{ url("admin_product_edit", {"id": entity.product.id, }) }}" class="button">{{ 'Cancel'|trans }}</a>

        </div>
    </div>

    {{ form_end(form) }}

{% endblock content %}
