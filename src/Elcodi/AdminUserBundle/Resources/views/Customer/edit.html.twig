{% extends 'AdminCoreBundle::layout.html.twig' %}


{% block content_title %}
    {{ 'Customer Zone'|trans }}
{% endblock content_title %}


{% block breadcrumb %}
    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            "Customers": {
                "url": url('admin_customer_list')
            },
            ("Edit #" ~ id): {
                "active" : true
            }
        }
    } %}
{% endblock breadcrumb %}


{% block content %}
    <div class="row">
        <div class="col-md-6">
            {{ render(url("admin_customer_edit_component", {
                'id': id
            })) }}
        </div>
    </div>
{% endblock content %}
