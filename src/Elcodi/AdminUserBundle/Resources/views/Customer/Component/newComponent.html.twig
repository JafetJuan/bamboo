{% extends 'AdminCoreBundle::Common/formComponent.html.twig' %}


{% form_theme form 'AdminCoreBundle::Forms/fields.html.twig' %}


{% block title %}
    {{ 'New Customer'|trans }}
{% endblock title %}


{% block content %}
    {{ form_start(form, {'action': url('admin_customer_save')}) }}

        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.lastname) }}
        {{ form_row(form.gender) }}
        {{ form_row(form.birthday) }}
        {{ form_row(form.language) }}
        {{ form_row(form.phone) }}
        {{ form_row(form.identityDocument) }}
        {{ form_row(form.guest) }}
        {{ form_row(form.newsletter) }}
        {{ form_row(form.enabled) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
                <a href="{{ path('admin_customer_list') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
            </div>
        </div>

    {{ form_end(form) }}
{% endblock content %}
