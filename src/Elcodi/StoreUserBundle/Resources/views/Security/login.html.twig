{% extends 'StoreCoreBundle::layout.html.twig' %}


{% form_theme form 'StoreCoreBundle::fields.html.twig' %}

{% block content_title %}Login{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="span6 offset3">
                <div class="member-box">

                    <h2>{{ "Login"|trans }}</h2>

                    {{ form_start(form) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password) }}

                        <p class="buttons">
                            {{ form_row(form.send, {attr: {'class': 'btn btn-primary' }}) }}
                            <a class="btn btn-blank" href="{{ url("store_password_remember") }}">
                                Forgot your password?
                            </a>
                            -
                            <a class="btn btn-blank" href="{{ url("store_register") }}">
                                Create new account
                            </a>
                        </p>
                    {{ form_end(form) }}

                    {% render url('hwi_oauth_connect') %}
                </div>
            </div>
        </div>
    </div>
{% endblock content %}
