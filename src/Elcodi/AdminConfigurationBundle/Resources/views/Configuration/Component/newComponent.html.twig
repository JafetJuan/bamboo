{% extends 'AdminCoreBundle::Common/formComponent.html.twig' %}

{% form_theme form 'AdminCoreBundle::Forms/fields.html.twig' %}

{% block title %}
    {{ 'New Configuration'|trans }}
{% endblock title %}

{% block content %}

    {{ form_start(form, {'action': url('admin_configuration_save')}) }}

    {{ form_row(form.namespace) }}
    {{ form_row(form.parameter) }}
    {{ form_row(form.value) }}
    {{ form_row(form.createdAt) }}
    {{ form_row(form.updatedAt) }}
    {{ form_row(form.enabled) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans }}</button>
            <a href="{{ path('admin_configuration_list') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
        </div>
    </div>

    {{ form_end(form) }}

{% endblock content %}
