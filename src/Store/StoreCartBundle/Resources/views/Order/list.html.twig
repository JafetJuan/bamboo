{% extends 'StoreCoreBundle::layout.html.twig' %}

{% block content_title %}Orders{% endblock content_title %}

{% block content %}

    <div class="row">
        <div class="span12">

            <table class="basket-table">
                <tbody>

                {% for order in orders %}

                    <tr>
                        <td class="image">
                            <img src="{{ order.orderLines.first.product.principalImage|resize({
                                width: 80,
                                height: 80,
                                type: 5 })
                            }}" alt="{{ line.product.name }}" />
                        </td>
                        <td class="title">
                            <a href="{{ url('store_order_view', {
                                orderId: order.id
                            }) }}">Order #{{ order.id }}</a>
                        </td>
                        <td class="title">{{ order.createdAt|date('d.m.Y') }}</td>
                        <td class="total">{{ order.amount|print_price('USD', 'USD') }}</td>
                    </tr>

                {% endfor %}

                </tbody>
            </table>

        </div>
    </div>

{% endblock %}
