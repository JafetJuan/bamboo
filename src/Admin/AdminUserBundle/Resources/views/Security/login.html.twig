{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block body_class %}texture{% endblock body_class %}

{% block body %}

    <div id="cl-wrapper" class="login-container">

        <div class="middle-login">
            <div class="block-flat">
                <div class="header">
                    <h3 class="text-center">Bamboo Admin</h3>
                </div>
                <div>
                    {{ form_start(form, {
                        "attr": {
                            "class": "form-horizontal",
                            "style": "margin-bottom: 0px !important;"
                        }
                    }) }}

                        <div class="content">
                            <h4 class="title">{{ "Login Access"|trans }}</h4>

                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-user"></i>
                                        </span>
                                        {{ form_row(form.email, {
                                            "attr": {
                                                "class": "form-control",
                                                "placeholder": "Email"|trans
                                            }
                                        }) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-lock"></i>
                                        </span>
                                        {{ form_row(form.password, {
                                            "attr": {
                                                "class": "form-control",
                                                "placeholder": "Password"|trans
                                            }
                                        }) }}
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="foot">
                            <button type="submit" class="btn btn-primary">{{ "Log In"|trans }}</button>
                            <a href="{{ url("admin_password_remember") }}" class="btn btn-warning" data-dismiss="modal" type="warning">
                                Remember
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>

{% endblock body %}
