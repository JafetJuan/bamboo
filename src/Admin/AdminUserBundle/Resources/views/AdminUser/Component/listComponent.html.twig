{% extends 'AdminCoreBundle::Common/listComponent.html.twig' %}

{% block title %}
    {{ 'Admin Users list'|trans }}
{% endblock title %}

{% block table_head %}

    {% include "@AdminCore/Tables/head.html.twig" with {
    rows: {
    "Id": {width:"25"},
    "name": {},
    "username": {},
    "email": {},
    "enabled": {width:"25"},
    },
    class: "admin_user",
    } %}

{% endblock table_head %}

{% block table_body_row %}

    <td>
        <a href="{{ url("admin_admin_user_view", {"id": entity.id}) }}">
            {{ entity.id }}
        </a>
    </td>
    <td>
        {{ entity.fullname }}
    </td>
    <td>
        {{ entity.username }}
    </td>
    <td>
        {{ entity.email }}
    </td>
    <td>
        {% if entity.enabled %}
            <span class="label label-success">true</span>
        {% else %}
            <span class="label label-danger">false</span>
        {% endif %}
    </td>

    {% include "@AdminCore/Tables/actions.html.twig" with {
    entity: entity,
    class: "admin_user",
    } %}

{% endblock table_body_row %}

{% block table_paginator_links %}

    {% set url = 'admin_admin_user_list' %}
    {{ parent() }}

{% endblock table_paginator_links %}

{% block table_buttons %}
    <a href="{{ url("admin_admin_user_new") }}"type="button" class="btn btn-success">{{ "New admin user"|trans }}</a>
{% endblock table_buttons %}
