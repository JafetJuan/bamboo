{% extends 'AdminCoreBundle::layout.html.twig' %}

{% block content_title %}
    {{ 'Product Zone'|trans }}
{% endblock content_title %}

{% block breadcrumb %}

    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            "view product": {
                "active" : true
            }
        }
    } %}

{% endblock breadcrumb %}

{% block content %}

    <div class="row">
        <div class="col-md-6">
            {{ render(url("admin_product_view_component", {
                'id': id,
            })) }}
        </div>
        <div class="col-md-6">
            {{ render(url("admin_product_gallery_component", {
                'id': id,
            })) }}
        </div>
    </div>

{% endblock content %}
