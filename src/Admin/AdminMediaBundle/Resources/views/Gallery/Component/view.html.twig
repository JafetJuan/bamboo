<div class="gallery-cont">

    {% for image in images %}
        <div class="item">

            <div class="photo">
                <div class="head">
                    <span class="pull-right"><i class="fa fa-heart"></i> </span>
                    <h4>{{ image.name }}</h4>
                    <span class="desc">{{ entity.name }}</span>
                </div>
                <div class="img">
                    <img src="{{ image|viewImage }}"/>

                    <div class="over">
                        <div class="func">
                            <a href="{{ image|viewImage }}">
                                <i class="fa fa-link"></i>
                            </a>
                            <a class="image-zoom" href="{{ image|viewImage }}">
                                <i class="fa fa-search"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endfor %}
</div>
